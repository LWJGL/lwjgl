    <target name="generate-opencl" depends="generators" description="Generates java and native source for CL">
        <apply executable="apt" parallel="true" dir="${lwjgl.src.templates.cl}" relative="true">
            <arg value="-nocompile"/>
            <arg value="-factory"/>
